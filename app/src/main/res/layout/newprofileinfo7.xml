<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/NewProfileInfoLinLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newprofileheading.display7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10"
                android:fontFamily="@font/fira_sans_bold"
                android:text="New Profile"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/NameLinLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nameheading.display7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_sans"
                    android:text="Name:"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ProfilePersonName.display7"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/fira_sans_italic"
                    android:inputType="textPersonName"
                    android:text="[Insert Name Here]"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/symptomsHeading.display7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/fira_sans"
                android:text="Symptoms (to track):" />

            <LinearLayout
                android:id="@+id/ChecklistLinLay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/bowelMovementHeading.display7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_sans_italic"
                    android:text="Bowel Movement" />

                <CheckBox
                    android:id="@+id/sleepHeading.display7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_sans_italic"
                    android:text="Sleep" />

                <CheckBox
                    android:id="@+id/heartRateHeading.display7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_sans_italic"
                    android:text="Heart Rate" />

                <CheckBox
                    android:id="@+id/temperatureHeading.display7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_sans_italic"
                    android:text="Temperature" />

                <CheckBox
                    android:id="@+id/painHeading.display7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_sans_italic"
                    android:text="Pain" />

                <CheckBox
                    android:id="@+id/dietHeading.display7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_sans_italic"
                    android:text="Diet" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>