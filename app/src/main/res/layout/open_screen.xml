<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hecalogo1"
                    android:layout_width="222dp"
                    android:layout_height="222dp"
                    android:layout_marginTop="0dp"
                    app:srcCompat="@drawable/hecaapplogo" />

                <TextView
                    android:id="@+id/heca1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_sans_black_italic"
                    android:text="HECA"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/hecafull1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/fira_sans_medium_italic"
                    android:text="[HECA Full name]"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/signuplogin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/fira_sans_light"
                    android:text="Sign up or Login Below"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/signupbutton1"
                    android:layout_width="150dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/fira_sans"
                    android:text="Sign Up"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/loginbutton1"
                    android:layout_width="150dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/fira_sans"
                    android:text="Login"
                    android:textSize="22sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>